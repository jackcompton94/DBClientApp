      <Label layoutX="14.0" layoutY="14.0" text="Add a Customer to Scheduler" textFill="#233142">
         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
      </Label>
      <GridPane layoutX="46.0" layoutY="75.0" prefHeight="150.0" prefWidth="230.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="103.0" minWidth="10.0" prefWidth="79.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="141.0" minWidth="10.0" prefWidth="131.0" />
